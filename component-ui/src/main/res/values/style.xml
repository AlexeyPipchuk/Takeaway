<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="textInputStyle">@style/AppOutlinedTextInputLayout</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layout_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBody</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="DialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/Text.Body</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/spacing_16</item>
    </style>

    <style name="Text.Title.Light" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/spacing_16</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:textSize">@dimen/spacing_12</item>
    </style>

    <style name="Text.Title.Large" parent="Text.Title">
        <item name="android:textSize">@dimen/spacing_24</item>
    </style>

    <style name="Text.Body.Large" parent="Text.Body">
        <item name="android:textSize">@dimen/spacing_16</item>
    </style>

    <style name="Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/spacing_16</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>

    <style name="Card.Category" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/backgroundUnderCards</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cardElevation">@dimen/none_elevation</item>
    </style>

    <style name="Card.Category.Selected" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Button.BlueBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/spacing_16</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Button.Counter" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/spacing_8</item>
        <item name="android:paddingStart">@dimen/spacing_8</item>
        <item name="android:paddingEnd">@dimen/spacing_8</item>
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/image_button_ripple</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/product_dialog_border</item>
    </style>

    //TextInput

    <style name="AppOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="boxStrokeColor">@color/text_input_color</item>
    </style>

</resources>