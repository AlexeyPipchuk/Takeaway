<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <takeaway.component.CustomToolbarView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backIcon="@drawable/ic_back_black"
            app:backText="@string/info_back_button_text"
            app:toolbarTitle="@string/info_about_us" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/infoTitle"
                style="@style/Text.Title.Large"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                android:text="@string/info_who_we_title"
                app:layout_constraintBottom_toBottomOf="@+id/infoLogo"
                app:layout_constraintEnd_toStartOf="@+id/infoLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/infoLogo" />

            <ImageView
                android:id="@+id/infoLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_logo_takeaway_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/aboutTakeawayText"
                style="@style/Text.Body.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_8"
                android:layout_marginEnd="@dimen/spacing_16"
                android:text="@string/info_about_takeaway_big_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoLogo" />

            <ImageView
                android:id="@+id/takeawayInstIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_8"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_instagram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutTakeawayText" />

            <TextView
                android:id="@+id/takeawayInst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                android:layout_marginBottom="@dimen/spacing_2"
                android:linksClickable="true"
                android:textColorLink="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/takeawayInstIcon"
                app:layout_constraintStart_toEndOf="@+id/takeawayInstIcon"
                app:layout_constraintTop_toTopOf="@+id/takeawayInstIcon"
                tools:text="takeaway.russia" />

            <ImageView
                android:id="@+id/infoStatistLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_statist_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/takeawayInst" />

            <TextView
                android:id="@+id/statistInfoTitle"
                style="@style/Text.Title.Large"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                android:text="@string/info_who_statist_title"
                app:layout_constraintBottom_toBottomOf="@+id/infoStatistLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/infoStatistLogo"
                app:layout_constraintTop_toTopOf="@+id/infoStatistLogo" />

            <TextView
                android:id="@+id/aboutStatistText"
                style="@style/Text.Body.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_8"
                android:layout_marginEnd="@dimen/spacing_16"
                android:text="@string/info_about_statist_big_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoStatistLogo" />

            <ImageView
                android:id="@+id/statistInstIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_8"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_instagram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutStatistText" />

            <TextView
                android:id="@+id/statistInst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                android:layout_marginBottom="@dimen/spacing_2"
                android:linksClickable="true"
                android:textColorLink="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/statistInstIcon"
                app:layout_constraintStart_toEndOf="@+id/statistInstIcon"
                app:layout_constraintTop_toTopOf="@+id/statistInstIcon"
                tools:text="statist_russia" />

            <TextView
                android:id="@+id/privacyPolicyLink"
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_24"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_8"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toTopOf="@+id/versionSeparator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statistInst"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Ознакомьтесь с Политикой конфиденциальности" />

            <LinearLayout
                android:id="@+id/versionSeparator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_12"
                android:layout_marginBottom="@dimen/spacing_12"
                android:background="@color/black"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/appName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/appName"
                style="@style/Text.Body.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_4"
                android:text="@string/app_name"
                app:layout_constraintBottom_toTopOf="@+id/appVersionText"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/appVersionText"
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Версия приложения 1.0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>