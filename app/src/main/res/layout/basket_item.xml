<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/deleteProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/spacing_4"
        android:paddingEnd="@dimen/spacing_4"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/spacing_4"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_cross"
        app:layout_constraintBottom_toBottomOf="@+id/productName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/productName" />

    <TextView
        android:id="@+id/productName"
        style="@style/Text.Title.Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_12"
        android:layout_marginEnd="@dimen/spacing_32"
        android:layout_marginBottom="@dimen/spacing_12"
        app:layout_constraintBottom_toTopOf="@+id/productSeparator"
        app:layout_constraintEnd_toStartOf="@+id/amountPrice"
        app:layout_constraintStart_toEndOf="@+id/deleteProductButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Борщ с говядиной" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4"
        app:layout_constraintBottom_toTopOf="@+id/amountPrice"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1 шт." />

    <TextView
        android:id="@+id/amountPrice"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/productSeparator"
        android:layout_marginBottom="@dimen/spacing_12"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="150Р" />

    <LinearLayout
        android:id="@+id/productSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1"
        android:layout_marginTop="@dimen/spacing_12"
        android:layout_marginBottom="@dimen/spacing_12"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>